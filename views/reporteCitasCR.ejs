<!DOCTYPE html>
<html lang="es">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <!-- FontAwesome para Ã­conos -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <!-- Estilos personalizados -->
        <link rel="stylesheet" href="styles/reporteCitas.css">

        <title>Reporte de Citas</title>
    </head>
    <body>

        <main>
            <%- include('partials/navegacion') %>
            
            <section class="contenido">
                <section class="bloque-flex">
                    <div class="container">
                        <h1>Reporte de Citas</h1>
                        <table class="table table-striped table-bordered text-center">
                            <thead>
                                <tr>
                                    <th scope="col">Fecha</th>
                                    <th scope="col">Hora</th>
                                    <th scope="col">Paciente</th>
                                    <th scope="col">Doctor</th>
                                    <th scope="col">Especialidad</th>
                                    <th scope="col">Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Verifica que datosParaFront tenga elementos -->
                                <!-- <% console.log(datosCitasCN, "Datos EJS citas") %> -->
                                  
                                <% datosCitasCN.forEach(Citas => { %>
                                    <tr>
                                        <td><%= new Date(Citas.fecha).toLocaleDateString('es-ES') %></td>
                                        <td><%= Citas.hora %></td>
                                        <td><%= Citas.id_paciente %></td>
                                        <td><%= Citas.nombre_medico %></td>
                                        <td><%= Citas.especialidad %></td>
                                        <td>
                                            <%= Citas.estado === 0 ? 'Cancelada' : '' %>
                                        </td>
                                    </tr>
                                <% }); %>
                                  
                            </tbody>
                        </table>
                        <button class="btn btn-success"><i class="fa-solid fa-file-pdf"></i> Generar PDF</button>
                    </div>
                </section>
            </section>
        </main>
        <%- include('partials/footer') %>

