     <!-- Agregar nombre de styles css -->
    <link rel="stylesheet" href="styles/editarInventario.css">

    <title>Nombre pagina</title>

</head>
<body>


    <main>
        
        <%- include('../partials/navegacion') %>
        

        <section class="contenido">
            <%- include('../partials/tituloPagina.ejs') %>

            <div class="container">


                <form class="p-4 border" action="/editarProducto" method="post">
                    <h1>Editar Inventario</h1>
                    <div class="mb-3">
                        <input type="number" class="form-control" id="idMedicamento" name="idMedicamento" required
                        value="<%= producto.idtb_medicamentos %>" style="display: none;">
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="idCita" name="idCita" required
                        value="<%= producto.nombre %>" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Descripcion</label>
                        <input type="text" class="form-control" id="idCita" name="idCita" required
                        value="<%= producto.descripcion %>" disabled>
                    </div>
                  
                    <div class="mb-3">
                        <label for="" class="form-label">Cantidad en Inventario</label>
                        <input type="text" class="form-control" id="idCita" name="idCita" required
                        value="<%= producto.cantidad %>" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Cantidad en Ingreso</label>
                        <input type="number" class="form-control" id="cantidad" name="cantidad" placeholder="Cantidad de producto ..." required>
                    </div>
                    
                    
                    <div class="mb-3 opciones">
                        <button type="submit" class="btn btn-success">Editar Inventario</button>
                    </div>
                </form>
                
            </div>

            
        </section>


  
    </main>
    <%- include('../partials/ayuda') %>

    <%- include('../partials/footer') %>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="../public/js/slidebar.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>