<!DOCTYPE html>
<html lang="es">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- FontAwesome para íconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="styles/reporteCitas.css">


    <title>Medicamentos</title>
</head>
<body>

    <main>
        <%- include('../partials/navegacion') %>

        <section class="contenido">
            <%- include('../partials/tituloPagina.ejs') %>

            <section class="bloque-flex">
                <div class="container" id="container">
                    <h1>Mostrar Inventario Actual</h1>
                    <table class="table table-striped table-bordered text-center" id="tablaInventario">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripcion</th>
                                <th scope="col">Fecha Ingreso</th>
                                <th scope="col">Cantidad</th>
                                <th scope="col">Precio Compra</th>
                                <th scope="col">Precio Venta</th>
                                <th scope="col">Proveedor</th>
                                <th scope="col">Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Verifica si los datosInventario están definidos -->
                            <% if (datosInventario && datosInventario.length > 0) { %>
                                <% datosInventario.forEach(medicamento => { %>
                                    <tr>
                                        <td><%= medicamento.nombre %></td>
                                        <td><%= medicamento.descripcion %></td>
                                        <td><%= new Date(medicamento.FechaIngreso).toLocaleDateString('es-ES') %></td>   
                                        <td><%= medicamento.cantidad %></td>
                                        <td>₡ <%= medicamento.precioCompra %></td>
                                        <td>₡ <%= medicamento.precioVenta %></td>
                                        <td><%= medicamento.nombre_proveedor %></td>
                                        <td>            
                                            <button class="mostrarEditarInventario btn btn-warning" data-id="<%= medicamento.idtb_medicamentos %>">Editar</button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7">No hay datos disponibles</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </section>
        </section>

    </main>

    <%- include('../partials/footer') %>

   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="js/slidebar.js"></script>
    
     <!-- Agregar las librerías de jsPDF y autoTable -->
     <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.25/jspdf.plugin.autotable.min.js"></script>

     
    <script type="" src="js/generarPdf.js"></script>
    <script src="ajax/mostrarInventario.js"></script>
</body>
</html>
