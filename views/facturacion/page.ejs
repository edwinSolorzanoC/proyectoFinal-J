<!DOCTYPE html>
<html lang="es">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- FontAwesome para íconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="styles/facturacion.css">


    <title>facturacion</title>
</head>
<body>

    <main>
        <%- include('../partials/navegacion') %>

        <section class="contenido">
            <%- include('../partials/tituloPagina.ejs') %>

            <section class="bloque-flex">
                <div class="container" id="container">
                    <h1>Generar Facturas de ingresos</h1>
                    <table class="table table-striped table-bordered text-center" id="tablaInventario">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Fecha de Emision</th>
                                <th scope="col">Monto Cita</th>
                                <th scope="col">Monto Medicamentos</th>
                                <th scope="col">Monto Total</th>
                                <th scope="col">Opciones</th>

                            </tr>
                        </thead>
                        <tbody>
                           
                            <%  console.log(datosFacutacion) %>
                            <% if(datosFacutacion && datosFacutacion.length > 0) {%>
                                <!-- Verifica que datosParaFront tenga elementos -->
                                    <% datosFacutacion.forEach(dato => { %>
                                        <tr>
                                            <td><%= dato.idtb_facturas %></td>
                                            <td><%= new Date(dato.fechaEmision).toLocaleDateString('es-ES') %></td>
                                            <td><%= dato.montoCita%></td>
                                            <td><%= dato.montoMedicamentos %></td>
                                            <td><%= dato.montoTotal %></td>
                                            <td> <button class="btn btn-warning" id="generarPdfInventario"><i class="fa-solid fa-file-pdf"></i> Generar Factura</button></td>

                                        </tr>
                                    <% }); %>
                                    <% }else{ %> 
                                        <tr>
                                            <td colspan="6">No hay registros</td>
                                        </tr>
                                        <%}%>

                        </tbody>
                    </table>
                </div>
            </section>
        </section>

    </main>
    <%- include('../partials/ayuda') %>

    <%- include('../partials/footer') %>

   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="js/slidebar.js"></script>
    
     <!-- Agregar las librerías de jsPDF y autoTable -->
     <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.25/jspdf.plugin.autotable.min.js"></script>

     <script type="" src="js/generarFactura.js"></script>


</body>
</html>
