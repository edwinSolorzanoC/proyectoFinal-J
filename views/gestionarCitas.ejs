<!DOCTYPE html>
<html lang="es">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- FontAwesome para Ã­conos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="styles/gestionalCitas.css">

    <title>Gestionar citas</title>
</head>
<body>


    <main>
       
        <%- include('partials/navegacion') %>

        <section class="contenido">

            <%- include('partials/tituloPagina.ejs') %>


            <section class="bloque-flex">

                <div class="container">
                
                    <form class="p-4 border" action="/registrarCitas" method="post">
                        <h1>Agregar nuevas citas</h1>
                        <div class="mb-3">
                            <label for="cedulaPaciente">Paciente</label>
                            <input type="number" class="form-control" id="cedulaPaciente" name="cedulaPaciente" aria-describedby="" placeholder="Busqueda por cedula de paciente..." required>
                        </div>
                        <div class="mb-3">
                            <label for="especialidadCita">Especialidad</label>
                            <select class="form-select" aria-label="Default select example" id="especialidadCita" name="especialidadCita" required>
                                <option selected disabled>Seleccione una especialidad</option>
                                <% datosMedicos.forEach(dato => { %> 
                                    <option value="<%= dato.especialidad %>"><%= dato.especialidad %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="doctorCita">Doctor</label>
                            <select class="form-select" aria-label="Default select example" id="doctorCita" name="doctorCita" required>
                                <option selected disabled>Seleccione un doctor</option>
                                <% datosMedicos.forEach(dato => { %> 
                                    <option value="<%= dato.idtb_medicos %>"><%= dato.primerApellido + " " + dato.segundoApellido + " " + dato.primerNombre + " " + dato.segundoNombre %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="fechaCita" class="form-label">Fecha de cita</label>
                            <input type="date" class="form-control" id="fechaCita" name="fechaCita" aria-describedby="" placeholder="Nombre..." required>
                        </div>
                        <div class="mb-3">
                            <label for="horaCita" class="form-label">Hora</label>
                            <input type="time" class="form-control" id="horaCita" name="horaCita" aria-describedby="" placeholder="Nombre..." required>
                        </div>
                        <div class="mb-3 opciones">
                            <button type="submit" class="btn btn-warning w-100">Consultar Disponibilidad</button>
    
                        </div>
                    
                    </form>
    
                </div>
                
            </section>
            

        </section>
        


  
    </main>

    <%- include('partials/footer') %>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="../public/js/slidebar.js"></script>

    <script src="alerts/registroCitasAlerts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>