<!DOCTYPE html>
<html lang="es">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- FontAwesome para íconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Estilos personalizados -->
     <!-- Agregar nombre de styles css -->
    <link rel="stylesheet" href="styles/mostrarPacientes.css">

    <title>Nombre pagina</title>

</head>
<body>


    <main>
        
        <%- include('../partials/navegacion') %>


        <section class="contenido">
            <%- include('../partials/tituloPagina.ejs') %>

            <div class="container">
                <table class="table table-striped table-bordered text-center" id="tablaInventario">
                    <thead>
                        <tr>
                            <th scope="col">Cedula</th>
                            <th scope="col">Nombre Completo</th>
                            <th scope="col">Fecha Nacimiento</th>
                            <th scope="col">Correo Electronico</th>
                            <th scope="col">Dirección</th>
                        </tr>
                    </thead>
                    <tbody>

                        <% if (datosPacientes.length === 0) { %>
                            <tr>
                                <td colspan="9" class="text-center">No hay registros de Pacientes disponibles.</td>
                            </tr>
                        <% } else { %>
                            <% datosPacientes.forEach(Pacientes => { %>
                                <tr>
                                    <td scope="col" ><%= Pacientes.cedula %></td>
                                    <td scope="col" ><%= Pacientes.primerNombre %> <%= Pacientes.segundoNombre %> <%= Pacientes.primerApellido %> <%= Pacientes.segundoApellido %></td>
                                    <td scope="col" ><%= new Date(Pacientes.fechaNacimiento).toLocaleDateString('es-ES') %></td>
                                    <td scope="col" ><%= Pacientes.correoElectronio %></td>
                                    <td scope="col" ><%= Pacientes.direccion %></td>
                                   
                                </tr>
                            <% }); %>
                        <% } %>
                        
                    </tbody>
                </table>
            </div>
        </section>
        



  
    </main>

    <%- include('../partials/ayuda') %>

    <%- include('../partials/footer') %>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="js/slidebar.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>