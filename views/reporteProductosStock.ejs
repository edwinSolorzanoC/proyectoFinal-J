<!DOCTYPE html>
<html lang="es">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- FontAwesome para íconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="styles/reporteCitas.css">

    <title>Inventario de Medicamentos</title>
</head>
<body>

    <main>
        <%- include('partials/navegacion') %>

        <section class="contenido">
            <%- include('partials/tituloPagina.ejs') %>

            <section class="bloque-flex">
                <div class="container">
                    <h1>Inventario Actual Bajo</h1>
                    <table class="table table-striped table-bordered text-center">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripcion</th>
                                <th scope="col">Fecha Ingreso</th>
                                <th scope="col">Cantidad</th>
                                <th scope="col">Precio Compra</th>
                                <th scope="col">Precio Venta</th>
                                <th scope="col">Proveedor</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Verifica si los datosInventario están definidos -->
                            <% if (datosInventario && datosInventario.length > 0) { %>
                                <% datosInventario.forEach(medicamento => { %>
                                    <tr>
                                        <td><%= medicamento.nombre %></td>
                                        <td><%= medicamento.descripcion %></td>
                                        <td><%= new Date(medicamento.FechaIngreso).toLocaleDateString('es-ES') %></td>
                                        <td><%= medicamento.cantidad %></td>
                                        <td>₡ <%= medicamento.precioCompra %></td>
                                        <td>₡ <%= medicamento.precioVenta %></td>
                                        <td><%= medicamento.nombre_proveedor %></td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7">No hay datos disponibles</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <button class="btn btn-success"><i class="fa-solid fa-file-pdf"></i> Generar PDF</button>
                </div>
            </section>
        </section>

    </main>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="../public/js/slidebar.js"></script>

</body>
</html>
