<!DOCTYPE html>
<html lang="es">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <!-- FontAwesome para íconos -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <!-- Estilos personalizados -->
        <link rel="stylesheet" href="styles/reporteCitas.css">

        <title>Reporte de Egresoss</title>
    </head>
    <body>

        <main>
            <%- include('../partials/navegacion') %>

            <section class="contenido">
                
                <%- include('../partials/tituloPagina.ejs') %>

                <section class="bloque-flex">
                    <div class="container">
                        <h1>Egresos Totales</h1>
                        <table class="table table-striped table-bordered text-center">
                            <thead>
                                <tr>
                                    <th scope="col">Fecha Egreso</th>
                                    <th scope="col">Descripción</th>
                                    <th scope="col">Monto Total</th>
                                    <th scope="col">Número de Factura</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                <% if(datosEgresos && datosEgresos.length > 0) {%>
                                    <% datosEgresos.forEach(Egresos => { %>
                                        <tr>
                                            <td><%= new Date(Egresos.fecha).toLocaleDateString('es-ES') %></td>
                                            <td><%= Egresos.motivo %></td>
                                            <td>₡ <%= Egresos.montoTotal%></td>
                                            <td><%= Egresos.numerofactura %></td>
                                        </tr>
                                    <% }); %> 
                                    
                                <% }else{ %> 
                                    <tr>
                                        <td colspan="4">No hay registros</td>
                                    </tr>
                                    <%}%>
                                
                                
                            </tbody>
                        </table>
                    </div>
                </section>
            </section>
        </main>
        <%- include('../partials/ayuda') %>

        <%- include('../partials/footer') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="../public/js/slidebar.js"></script>

    </body>
</html>
